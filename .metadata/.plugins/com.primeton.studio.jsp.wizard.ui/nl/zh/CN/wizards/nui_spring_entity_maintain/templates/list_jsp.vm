	    <div class="nui-toolbar" style="border-bottom:0;padding:0px;">
	        <table style="width:100%;">
	            <tr>
	                <td style="width:100%;">
	                    <a class="nui-button" iconCls="icon-add" onclick="add()">增加</a>
	                    <a id="update" class="nui-button" iconCls="icon-edit" onclick="edit()">编辑</a>
	                    <a class="nui-button" iconCls="icon-remove" onclick="remove()">删除</a>
	                </td>
	            </tr>
	        </table>
	 	</div>
	    
	    <div class="nui-fit">
			<div id="datagrid1" dataField="${entityVar}s" class="nui-datagrid" style="width:${queryResultWidth};height:100%;" url="${query_biz}.biz.ext" 
			#if($isPagination)
			 pageSize="$pageLength" showPageIndex="$isPageCount"
			#else
			 showPager="false"
			#end 
			#if($tableStyle==1)
			 multiSelect="true"
			#elseif($tableStyle==2)
			 multiSelect="false"
			#end onselectionchanged="selectionChanged" allowSortColumn="false">
			    <div property="columns">
			   		<div type="indexcolumn"></div>
			   		#if($tableStyle==1 || $tableStyle==2) 
			    	<div type="checkcolumn"></div>
